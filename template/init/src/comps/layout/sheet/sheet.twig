{{ attach_library('[[THEME]]/sheet') }}

<div class="sheet">
  
  <div class="sheet__header">
    <div class="sheet__header-left">
      {% include comp ~ '/media/logo/logo.twig' %}
    </div>
    <div class="sheet__header-right">
      <div class="sheet__header-main-menu">
        {{ header_menu }}
      </div>
      <div class="sheet__header-support">{# Place for support button #}</div>
    </div>
  </div>

  <div class="sheet__mood">
    {{ mood }}
  </div>

  <div class="sheet__admin">
    {{ admin }}
  </div>

  <div class="sheet__content">{{ content }}</div>
  
  <div class="sheet__footer">
    <div class="sheet__footer-top">
      {{ footer_top }}
    </div>

    <div class="sheet__footer-bottom">
      <div class="sheet__footer-wrapper">
        <div class="sheet__footer-left">{{ footer_menu }}</div>
        <div class="sheet__footer-right">
          <div class="sheet__footer-icons">
            {% include comp ~ '/block/icon-list/icon-list.twig' %}
          </div>
          <div class="sheet__footer-contact">
            {% include comp ~ '/block/wysiwyg/wysiwyg.twig' with { 
              content: 'Tel: +49 (0)30 40 50 51 - 0 <br> Fax: +49 (0)30 40 50 51 - 19'
            } %}
          </div>
        </div>
      </div>
      <div class="sheet__footer-meta">
        {% include comp ~ '/block/meta/meta.twig' with {
          text: 'Copyright 2021 - Heinlein',
          fontnarrow: true,
          light_gray: true,
        } %}
      </div>
    </div>
  </div>

</div>